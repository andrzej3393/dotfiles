own_window			yes
own_window_type			normal
own_window_hints		undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer			yes
own_window_argb_visual		yes
own_window_argb_value		125

background			true

alignment			tr
gap_x				30
gap_y				60
maximum_width			250
minimum_size			250

format_human_readable		yes
short_units			yes

update_interval			1
update_interval_on_battery	3
cpu_avg_samples			1
net_avg_samples			1

override_utf8_locale		yes
use_xft				yes
xftfont				Monospace:size=7.5

draw_shades			no
draw_outline			no
draw_borders			no
draw_graph_borders		yes

default_color			F0F0F0
color0				134BFF

template0			${color0}${font :bold:size=10}\1 ${font}${color}${voffset -3}${hr 2}${voffset 3}

TEXT
${template0 SYS}
Uptime${alignr}${uptime}
Load (1, 5, 15)${alignr}${loadavg}
Kernel${alignr}${kernel}
Machine${alignr}${machine}
Hostname${alignr}${nodename}

${template0 CPU}
Core \#0
  Temperature${alignr}${hwmon temp 3}째C
  Frequency${alignr}2100 @ ${freq 1}
  Usage${alignr}${if_empty ${cpu cpu1}}0%${else}${cpu cpu1}%${endif}
  ${cpubar cpu1 5}
Core \#1
  Temperature${alignr}${hwmon temp 2}째C
  Frequency${alignr}2100 @ ${freq 2}
  Usage${alignr}${if_empty ${cpu cpu2}}0%${else}${cpu cpu2}%${endif}
  ${cpubar cpu2 5}

${template0 MEM}
RAM
  Usage${alignr}${mem} / ${memmax}
  ${membar 5}
SWAP
  Usage${alignr}${swap} / ${swapmax}
  ${swapbar 5}

${template0 M/B}
  AC adapter state${alignr}${acpiacadapter}
  Battery remaining${alignr}${battery_percent}%
  Battery time${alignr}${battery_time}
  Chipset temperature${alignr}${acpitemp}째C

${template0 NET}
System gateway${alignr}${gw_ip} @ ${gw_iface}
eth0
  Status${alignr}${if_up eth0}up${else}down${endif}
  Down speed${alignr}${downspeed eth0}
  Up speed${alignr}${upspeed eth0}
  IP${alignr}${addr eth0}

wlan0
  Status${alignr}${if_up wlan0}up${else}down${endif}
  Down speed${alignr}${downspeed wlan0}
  Up speed${alignr}${upspeed wlan0}
  IP${alignr}${addr wlan0}
  Bitrate${alignr}${wireless_bitrate wlan0}
  SSID${alignr}${wireless_essid wlan0}
  Link quality${alignr}${wireless_link_qual_perc wlan0}%
  Mode${alignr}${wireless_mode wlan0}

${template0 HDD}
Temperature${alignr}${hddtemp}째C
/
  Usage${alignr}${fs_used /} / ${fs_size /}
  ${fs_bar 5 /}
/home
  Usage${alignr}${fs_used /home} / ${fs_size /home}
  ${fs_bar 5 /home}
